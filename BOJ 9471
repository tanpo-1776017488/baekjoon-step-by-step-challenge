#include <iostream>
#include <queue>
#include <stack>
#include <algorithm>
#include <tuple>
using namespace std;

int main()
{
	ios::sync_with_stdio(false);
	cin.tie(NULL);
	int test;
	cin >> test;
	for (int t = 0; t < test; t++)
	{
		int c, cnt = 0, m;
		cin >> c >> m;
		int first = 1, second = 1;
		do {
			int temp = first;
			first=second;
			second = (temp + second) % m;
			cnt++;
		} while (first != 1 || second != 1);// 1, 1 피보나치 첫 번째 항과 두 번째 항
		cout << c << " " << cnt << "\n";    // 주기를 찾을 때 까지 계속 반복
	}
		
}
